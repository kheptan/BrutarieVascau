<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kp.brutarievascau.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Comanda Noua"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="trimiteComandaNoua"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Lista Comenzi"
        android:id="@+id/buttonListaComenzi"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Iesire"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonListaComenzi"
        android:layout_marginBottom="29dp"
        android:background="#c43434"
        android:enabled="true"
        android:onClick="iesireprogram"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adauga Client Nou"
        android:id="@+id/buttonAddNewClient"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:onClick="addclientnou"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista Clienti"
        android:id="@+id/button4"
        android:layout_below="@+id/buttonListaComenzi"
        android:layout_alignStart="@+id/buttonListaComenzi"
        android:onClick="listallclients"
        android:layout_alignEnd="@+id/buttonListaComenzi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista Produse"
        android:id="@+id/buttonLstProduse"
        android:onClick="listaProduse"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignStart="@+id/button4" />
</RelativeLayout>
