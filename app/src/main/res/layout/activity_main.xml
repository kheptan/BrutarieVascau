<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kp.brutarievascau.MainActivity"
    android:background="#f6e7ac">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brutaria Vascau v1.1"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Comanda Noua"
        android:id="@+id/button"
        android:onClick="trimiteComandaNoua"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista Produse"
        android:id="@+id/buttonLstProduse"
        android:onClick="listaProduse"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/buttonAddNewClient"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista Clienti"
        android:id="@+id/button4"
        android:onClick="listallclients"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonLstProduse"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Trimite Total Comanda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSendFinalComanda"
        android:layout_marginTop="14dp"
        android:elevation="0dp"
        android:onClick="trimiteComandaFinala"
        android:layout_below="@+id/buttonListaComenzi"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adauga Client Nou"
        android:id="@+id/buttonAddNewClient"
        android:onClick="addclientnou"
        android:layout_below="@+id/btnSendFinalComanda"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Lista Comenzi"
        android:id="@+id/buttonListaComenzi"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Iesire"
        android:id="@+id/button3"
        android:background="#c43434"
        android:enabled="true"
        android:onClick="iesireprogram"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
