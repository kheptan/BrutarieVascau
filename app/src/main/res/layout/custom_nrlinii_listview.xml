<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produs"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detalii_idProdus"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="35dp"
        android:hint="Id produs" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantitate :"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detalii_CantitateProdus"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignStart="@+id/detalii_idProdus"
        android:hint="Cantitate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pret :"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detalii_PretProdus"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/detalii_CantitateProdus"
        android:hint="Pret" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valoare"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detalii_ValoareProdus"
        android:hint="Valoare"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignStart="@+id/detalii_PretProdus" />

</RelativeLayout>
