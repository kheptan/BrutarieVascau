<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dadd42">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numar Comanda"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_nr_comanda"
        android:hint="numar "
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:id="@+id/textView13"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/header_valoare_totala" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dtacomanda"
        android:hint="data"
        android:layout_marginLeft="2dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beneficiar"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/header_beneficiar"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView16"
        android:layout_marginLeft="20dp"
        android:lines="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valoare Comanda"
        android:id="@+id/textView18"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/header_beneficiar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_valoare_totala"
        android:layout_alignTop="@+id/textView18"
        android:layout_toEndOf="@+id/textView18"
        android:layout_marginLeft="10dp"
        android:hint="valoare totala" />
</RelativeLayout>
