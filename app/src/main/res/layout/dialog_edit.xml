<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerPreviewDialog"
        android:layout_weight="1"
        android:spinnerMode="dialog" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editCantitateDialog"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/spinnerPreviewDialog"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Cantitate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salveaza"
        android:id="@+id/btnSavePreviewDialog"
        android:layout_marginStart="42dp"
        android:layout_below="@+id/editCantitateDialog"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Renunta"
        android:id="@+id/btnCancelPreviewDialog"
        android:layout_alignBottom="@+id/btnSavePreviewDialog"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp" />

</RelativeLayout>
