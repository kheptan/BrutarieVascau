<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kp.brutarievascau.ComandaNouaProdus"
    android:textAlignment="center"
    android:transitionGroup="false"
    android:padding="2dp"
    android:scrollIndicators="top"
    android:background="#f6e7ac">


    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerAdapterProduse"
        android:layout_marginTop="80dp"
        android:spinnerMode="dialog"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center|center_horizontal"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerDenumireProdus"
        android:hint="Denumire Produs"
        android:layout_above="@+id/spinerfieldcantitate"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/spinnerAdapterProduse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinerfieldcantitate"
        android:hint="Cantitate "
        android:numeric="integer"
        android:maxLines="1"
        android:maxLength="5"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/SpinnerDenumireProdus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerPretProduse"
        android:hint="Pret"
        android:layout_below="@+id/spinerfieldcantitate"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/spinerfieldcantitate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adauga Produs"
        android:id="@+id/butonAddProdusSpiner"
        android:layout_below="@+id/spinnerAdapterProduse"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/SpinnerDenumireProdus"
        android:background="#ff90aa" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vizualizare Comanda"
        android:id="@+id/viewdetailcomanda"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/SpinnerPretProduse"
        android:layout_alignEnd="@+id/SpinnerPretProduse"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecteaza Produs"
        android:id="@+id/textViewDenumireClient"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:background="#fbf695"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salveaza Comanda"
        android:id="@+id/btnSaveAll"
        android:layout_below="@+id/viewdetailcomanda"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/viewdetailcomanda" />

</RelativeLayout>
